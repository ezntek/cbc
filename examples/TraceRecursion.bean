FUNCTION Factorial(Num: INTEGER) RETURNS INTEGER
    DECLARE BaseCase: BOOLEAN
    DECLARE Result: INTEGER

    BaseCase <- (Num = 1)
    IF BaseCase
      THEN
        Result <- 1
        RETURN Result
      ELSE
        Result <- Num * Factorial(Num - 1)
        RETURN Result
    ENDIF
ENDFUNCTION

TRACE(Num, BaseCase, Result) TO "recursion.html"
    OUTPUT Factorial(6)
ENDTRACE
